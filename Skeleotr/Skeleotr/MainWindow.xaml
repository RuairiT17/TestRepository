<Window x:Class="Skeleotr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skeleotr"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000">
    <Viewbox Height="750" Width="1000" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" >


        <Grid x:Name="LayoutRoot" Background="white" Height=" 950" Width="1000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"></ColumnDefinition>
                <ColumnDefinition Width="400"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image x:Name="ColourStream" Grid.Column ="0" Height="700" Width=" 600"></Image>
            <Canvas x:Name="Canvy" Grid.Column="0" Background="Transparent" Width="700" Height="600" >
                
            </Canvas>

            <TextBox Grid.Column="1" Height="500"
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    x:Name="GestureImageTBox" Width="350">  </TextBox>


        </Grid>

    </Viewbox>
</Window>
